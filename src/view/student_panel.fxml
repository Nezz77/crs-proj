<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StudentController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Student Panel" />

            <!-- Buttons for each student panel option -->
            <Button onAction="#handleViewCourses" prefWidth="200.0" text="View Courses" />
            <Button onAction="#handleRegisterForCourse" prefWidth="200.0" text="Register for Course" />
            <Button onAction="#handleDropCourse" prefWidth="200.0" text="Drop Course" />
            <Button onAction="#handleViewAcademicRecord" prefWidth="200.0" text="View Academic Record" />
            <Button onAction="#handleLogout" prefWidth="200.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Logout" />
        </VBox>
    </children>
</AnchorPane>
