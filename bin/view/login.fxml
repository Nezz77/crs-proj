<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="357.0" prefWidth="493.0" spacing="10.0">
            <Label prefHeight="200.0" prefWidth="450.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="                        Course Registration System" />
            <TextField fx:id="usernameField" alignment="CENTER" prefHeight="25.0" prefWidth="87.0" promptText="Enter Username" />
            <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Enter Password" />
            <Button onAction="#handleLogin" prefHeight="28.0" prefWidth="121.0" text="Login" />
        </VBox>
    </children>
</AnchorPane>
