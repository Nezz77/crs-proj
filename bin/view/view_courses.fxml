<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="353.0" prefWidth="543.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewCoursesController">
    <children>
        <TableView fx:id="courseTable" layoutX="70.0" layoutY="14.0" prefHeight="283.0" prefWidth="403.0">
            <columns>
                <TableColumn fx:id="courseIdColumn" prefWidth="126.0" text="Course ID">
                    <cellValueFactory><PropertyValueFactory property="courseId" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="titleColumn" prefWidth="138.0" text="Title">  
                    <cellValueFactory><PropertyValueFactory property="title" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="creditsColumn" prefWidth="136.0" text="Credits">
                    <cellValueFactory><PropertyValueFactory property="credits" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Column X" />
            </columns>
        </TableView>
        
        <!-- Back Button -->
        <Button layoutX="234.0" layoutY="305.0" onAction="#handleBackButton" prefHeight="25.0" prefWidth="75.0" text="Back" />
    </children>
</AnchorPane>
